@page "/TradingJournal"
@inject HttpClient Http


@if (oPositionVM == null)
{
    <p><em>Loading...</em></p>
}
else
{
    
    <div class="rz-p-sm-12">
        <RadzenAccordion Multiple="true">
            <Items>
                @foreach (var item in oPositionVM)
                {
                    <RadzenAccordionItem Text=@item.InstrumentName Icon="label">


                        @if (listOptionTransaction == null)
                        {
                            <p><em>Loading...</em></p>
                        }
                        else
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>instrumentName</th>
                                        <th>size</th>
                                        <th> average_price</th>
                                        <th>MarkPrice</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@item.InstrumentName</td>
                                        <td>@item.size</td>
                                        <td>@item.average_price</td>
                                        <td>@item.MarkPrice</td>
                                    </tr>
                                    <br />
                                    <tr>
                                        <th>instrumentName</th>
                                        <th>size</th>
                                        <th> indexPrice</th>
                                        <th>price</th>
                                    </tr>

                                    @foreach (var item2 in oTransactionVM)
                                    {
                                        if (@item2.InstrumentName == @item.InstrumentName)
                                        {
                                            <tr style="color:red">
                                                <td>@item2.InstrumentName </td>
                                                <td>@item2.Amount</td>
                                                <td>@item2.IndexPrice </td>
                                                <td>@item2.Price</td>
                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        }


                    </RadzenAccordionItem>
                }
            </Items>

        </RadzenAccordion>
    </div>
}











@if (oTransactionVM == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>instrumentName</th>
                <th>amount</th>
                <th>indexPrice</th>
                <th>price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in oTransactionVM)
            {
                <tr>
                    <td>@item.InstrumentName </td>
                    <td>@item.Amount</td>
                    <td>@item.IndexPrice </td>
                    <td>@item.Price</td>
                </tr>
            }
        </tbody>
    </table>
}

<br />
<br />
<br />

