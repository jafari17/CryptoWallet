{
    <p><em>Loading...2</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>instrumentName</th>
                <th>size</th>
                <th>average_price</th>
                <th>MarkPrice</th>
                <th>delta</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in oPositionVM)
            {
                <tr>
                    <td>@item.InstrumentName</td>
                    <td>@item.size</td>
                    <td>@item.average_price</td>
                    <td>@item.MarkPrice</td>
                    <td>@item.delta</td>
                </tr>
            }
        </tbody>
    </table>
}